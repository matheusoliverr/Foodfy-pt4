{% extends "admin/layouts.njk" %}

{% block header %}
    <a href="/admin/recipes" class="open">RECEITAS</a>
    <a href="/admin/chefs">CHEFS</a>
{% endblock %}

{% block content %}

    <main>

        <div class="recipe-card detailed">
            <div>
            <h1>Receita: {{recipe.title}}</h1>
            <button class="edit-button" id="{{recipe.id}}">Editar receita</button>
            </div>
            <img class="img-detailed admin" src="{{recipe.image}}" alt="{{recipe.title}}">
            <p class="recipe-name detailed">{{recipe.title}}</p>
            <p class="creator-name detailed">Por {{recipe.chef_name}}</p>
        </div>

        <section class="recipe-details">

            <div class="detail"> 
                <div class="details-title"  id="ingredients">
                    <h1>Ingredientes</h1>
                    <a class="button">ESCONDER</a>
                </div>
                <div class="details-content">
                    {% for ingredient in recipe.ingredients%}
                    <li>{{ingredient}}</li>
                    {% endfor %}
                </div>
            </div>

            <div class="detail"> 
                <div class="details-title"  id="preparation">
                    <h1>Modo de preparo</h1>
                    <a class="button">ESCONDER</a>
                </div>
                <div class="details-content">
                    {% for preparation in recipe.preparation if recipe.preparation.length !== "1" %}
                    <li>{{preparation}}</li>
                    {% endfor %}
                </div>
            </div>

            {% if recipe.information !== "" %}
                <div class="detail"> 
                    <div class="details-title"  id="information">
                        <h1>Informações adicionais</h1>
                        <a class="button">ESCONDER</a>
                    </div>
                    <div class="details-content">
                        <p>{{recipe.information}}</p>
                    </div>
                </div>
            {% endif %}

        </section>
            
    </main>

    

{% endblock %}
